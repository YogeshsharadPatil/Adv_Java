		protected Connection getConnection() {
			Connection conn=null;
			try {
				Class.forName("com.mysql.cj.jdbc.Driver");
				conn = DriverManager.getConnection(jdbcUrl,jdbcUsername,jdbcPwd);
				} catch (ClassNotFoundException | SQLException e) {
				
				e.printStackTrace();
				}finally{
					try {
						conn.close();
					}catch(Exception e) {
						e.printStackTrace();
					
					}
				
				}
				return conn;
			}
		
